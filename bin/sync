#!/usr/bin/env php
<?php
use Gt\Sync\Command\SyncCommand;
use Gt\Cli\Application;
use Gt\Cli\Argument\ArgumentList;

$autoloadLocations = [
	implode(DIRECTORY_SEPARATOR, [
		__DIR__,
		"..",
		"..",
		"..",
		"autoload.php",
	]),
	implode(DIRECTORY_SEPARATOR, [
		__DIR__,
		"..",
		"vendor",
		"autoload.php",
	]),
];

foreach($autoloadLocations as $location) {
	if(file_exists($location)) {
		require($location);
		break;
	}
}

$application = new Application(
	"Client-side build system",
	new ArgumentList(...$argv),
	new SyncCommand()
);
//$application->setDefaultCommand("sync");
$application->run();