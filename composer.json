{
	"name": "phpgt/sync",
	"description": "Synchronise two directories.",

	"require": {
		"php": ">=8.0",
		"phpgt/cli": "1.3.*",
		"webmozart/glob": "4.6.*"
	},

	"require-dev": {
		"phpstan/phpstan": "^v1.8",
		"phpunit/phpunit": "^v9.5"
	},

	"autoload": {
		"psr-4": {
			"Gt\\Sync\\": "./src"
		}
	},

	"autoload-dev": {
		"psr-4": {
			"Gt\\Sync\\Test\\": "./test/phpunit"
		}
	},

	"bin": [
		"bin/sync"
	],

	"keywords": [
		"rsync",
		"synchronise",
		"synchronize",
		"copy",
		"recursive",
		"filesystem",
		"file",
		"files"
	],

	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/PhpGt"
		}
	]
}
