{
	"name": "phpgt/sync",
	"description": "Synchronise two directories.",

	"require": {
		"php": ">=7.2",
		"phpgt/cli": "1.3.*",
		"webmozart/glob": "4.*"
	},

	"require-dev": {
		"phpunit/phpunit": "9.*",
		"phpstan/phpstan": "^0.12"
	},

	"autoload": {
		"psr-4": {
			"Gt\\Sync\\": "./src"
		}
	},

	"autoload-dev": {
		"psr-4": {
			"Gt\\Sync\\Test\\": "./test/phpunit"
		}
	},

	"bin": [
		"bin/sync"
	],

	"keywords": [
		"rsync",
		"synchronise",
		"synchronize",
		"copy",
		"recursive",
		"filesystem",
		"file",
		"files"
	]
}
